{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "eslint.alwaysShowStatus": true,
  "eslint.format.enable": true,

  "liveServer.settings.port": 5500, // match port in launch
  "liveServer.settings.root": "/public", // serve from /public
  "liveServer.settings.wait": 500, // delay reload

  "rest-client.environmentVariables": {
    "$shared": { "host": "https://api.example.com" }
  },
  "rest-client.previewOption": "full",

  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.enabled": true
}
